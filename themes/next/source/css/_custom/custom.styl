//微信公众号
.weixin-box {
  position: absolute;
  bottom: 45px;
  left: 10px;
  border-radius: 5px;
  box-shadow: 0 0 10px 0 rgba(0,0,0,.35)
}
.weixin-menu {
  position: relative;
  height: 24px;
  width: 24px;
  cursor: pointer;
  background: url(https://ziyuan.lruihao.cn/images/wechat.svg);
  background-size: 24px 24px
}
.weixin-hover {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 0;
  width: 0;
  border-radius: 3px;
  box-shadow: 0 0 10px 0 rgba(0,0,0,.35);
  background: url(https://ziyuan.lruihao.cn/images/wechat-qcode.jpg);
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: 150px 150px;
  transition: all .35s ease-in-out;
  z-index: 1024;
  opacity: 0
}
.weixin-menu:hover .weixin-hover {
  bottom: 24px;
  left: 24px;
  height: 170px;
  width: 150px;
  opacity: 1
}
.weixin-description {
  opacity: 0;
  position: absolute;
  bottom: 3%;
  left: 5%;
  right: 5%;
  font-size: 12px;
  transition: all .35s cubic-bezier(1,0,0,1)
}
.weixin-menu:hover .weixin-description {
  opacity: 1
}

